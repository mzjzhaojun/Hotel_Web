	    var accout = "";
	    function getlogincustomerBack(data){
	    	
	    	if (data.succeed) {
				if (data.result.statusCode == "200") {
					if(data.result.successMsg!=null && data.result.successMsg!="null"){
						accout = data.result.successMsg.accout;
					}else{
