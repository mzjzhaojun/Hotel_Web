/*登录**/
body{background-color:#1c77ac; background-image:url(../img/login/light.png); background-repeat:no-repeat; background-position:center top; overflow:hidden;font-family:'微软雅黑'; margin:0 auto;min-width:980px;}
*{font-size:9pt;border:0;margin:0;padding:0;}
ul{display:block;margin:0;padding:0;list-style:none;}
li{display:block;margin:0;padding:0;list-style: none;}
a,a:focus{text-decoration:none;color:#000;outline:none;blr:expression(this.onFocus=this.blur());}
a:hover{color:#00a4ac;text-decoration:none;}
img{border:0;}
dl,dt,dd,span{margin:0;padding:0;display:block;}
table{border-collapse:collapse;border-spacing: 0;}
cite{font-style:normal;}
h2{font-weight:normal;}

.mainBody{position:absolute;z-index:-1;position:absolute;top:0px;left:0px;right:0px;bottom:0px;}
.mainBody .cloud {position:absolute;top:0px;left:0px;right:0px;bottom:0px;background:url(../img/login/cloud.png) no-repeat;z-index:1;opacity:0.5;}
.mainBody #cloud2 {z-index:2;}
/*login*/
.logintop{height:47px; position:absolute; top:0; background:url(../img/login/loginbg1.png) repeat-x;z-index:100; width:100%;font-family:'微软雅黑';}
.logintop span{color:#fff; line-height:47px; background:url(../img/login/loginsj.png) no-repeat 21px 18px; text-indent:44px; color:#afc5d2; float:left;}
.logintop ul{float:right; padding-right:30px;}
.logintop ul li{float:left; margin-left:20px; line-height:47px;}
.logintop ul li a{color:#afc5d2;}
.logintop ul li a:hover{color:#fff;}
.loginbody{background:url(../img/login/loginbg3.png) no-repeat center center; width:100%; height:585px; overflow:hidden; position:absolute; top:47px;}
.loginbody .systemlogo{background:url(../img/login/loginlogo.png) no-repeat center;width:100%; height:71px; margin-top:75px;}
.loginbody .loginbox{width:692px; height:336px; background:url(../img/login/logininfo.png) no-repeat; margin-top:30px;}
.loginbody .loginbox ul{margin-top:88px; margin-left:285px;}
.loginbody .loginbox ul li{margin-bottom:25px;}
.loginbody .loginbox ul li label{color:#687f92; padding-left:25px;}
.loginbody .loginbox ul li label a{color:#687f92;}
.loginbody .loginbox ul li label a:hover{color:#3d96c9;}
.loginbody .loginbox ul li label input{margin-right:5px;}
.loginbody .loginbox .span{position: absolute;bottom:107px;margin-left:10px;font-size:12px;font-family: 微软雅黑;color:red;}
.loginbody .loginbox .loginuser{width:299px; height:48px; background:url(../img/login/loginuser.png) no-repeat; border:none; line-height:48px; padding-left:44px; font-size:14px;font-family:'微软雅黑';}
.loginbody .loginbox .loginpwd{width:299px; height:48px; background:url(../img/login/loginpassword.png) no-repeat; border:none;line-height:48px; padding-left:44px; font-size:14px; color:#90a2bc;font-family:'微软雅黑';}
.loginbody .loginbox .loginbtn{width:220px;height:35px; background:#3994C8; font-size:14px; font-weight:bold; color:#fff;cursor:pointer; line-height:35px;margin-left:10px;border-radius:3px;font-family:'微软雅黑';}
.loginbody .loginbox .loginbtn:HOVER{background:#1E78AD;}
.loginbm{height:50px; line-height:50px; text-align:center; background:url(../img/login/loginbg2.png) repeat-x;position:absolute; bottom:0; width:100%; color:#afc5d2;}
.loginbm a{font-weight:bold;color:#0b3a58;}
.loginbm a:hover{color:#fff;}