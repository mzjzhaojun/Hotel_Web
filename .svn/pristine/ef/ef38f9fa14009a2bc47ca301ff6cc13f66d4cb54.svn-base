 @charset "utf-8";
/* CSS Document */
.lay-bg{position: fixed;width: 100%;height: 100%;background:#b2b2b2;top:0;left:0;z-index:10;}
.lay-box{width: 80%;height: 336px;max-width: 490px;background: #9a9a9a;padding:7px;border-radius: 5px;margin:100px auto 0;position: relative;}
.lay-c{width: 100%;height: 100%;background:#f0f0f0;color:#717171;font-family: 'microsoft yahei';text-align: center;}
.lay-c dt{height: 30px;font-size:21px;line-height: 30px;background:-webkit-linear-gradient(top,#fff,#d5d5d5);background:-moz-linear-gradient(top,#fff,#d5d5d5);background:-o-linear-gradient(top,#fff,#d5d5d5);    background:linear-gradient(top,#fff,#d5d5d5);}
.lay-c dd{padding-top:20px;}
.lay-c dd p,.lay-c dd input{display:block;margin:0 7% 10px;line-height: 160%;}
.lay-c dd input.lay-txt{height: 32px;border: 1px solid #d0d0d0;background:#f5f5f5;line-height: 30px;font-family: arial;width: 86%;text-align: center;}
.lay-c dd p.lay-btn{/*width: 50%;margin:0 auto 10px;*/margin-top:20px;height: 40px;background: #596a74;color:#fff;font:normal 21px/40px 'microsoft yahei';}
.lay-c dd p.lay-tips2{}
.lay-close{position: absolute;width: 34px;height: 34px;border-radius:100%;border:1px solid #fff;background: #6b6b6b;color:#fff;text-align: center;font:normal 24px/34px 'microsoft yahei';top:-14px;right:-14px;}