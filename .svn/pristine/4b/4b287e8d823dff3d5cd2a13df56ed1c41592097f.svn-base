<!DOCTYPE html>
<html>
  <head>
    <title>用户管理-新增</title>
	
    <meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
    <meta http-equiv="description" content="this is my page">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" type="text/css" href="../../css/list.css">
    <link rel="stylesheet" type="text/css" href="../../css/validate.css">
    <script language="JavaScript" src="../../js/jquery-1.9.1.min.js"></script>
    <script language="JavaScript" src="../../js/request.js"></script>
	<script language="JavaScript" src="../../js/json.js"></script>
	<script type="text/javascript" src="../../js/eap.core.js"></script>
	<script type="text/javascript" src="../../js/eap.tip.js" ></script>
	<script language="JavaScript" src="../../js/eap.validate.js"></script>
	<script src="../../js/eap.lang-zh_CN.js"></script>
	
	<script language="JavaScript" type="text/javascript">
		G = function(objId){return document.getElementById(objId)};
		Gn = function(objName){return document.getElementsByName(objName)};
		window.onload=function(){
			url = "/Hotel/rest/role";
			RemoteUtil.send(url, "GET", null, callSubmitBack2);
		};
		
		function callSubmitBack2(data){
			if(data.succeed){
				if(data.result.statusCode == "200"){
					var rolelist=data.result.successMsg;
					var html="";
					for ( var i = 0; i < rolelist.length; i++) {
						var role_name=rolelist[i].role_name;
						var role_code=rolelist[i].role_code;
						html += "<input type='checkbox' name='role' id="+(role_code+i)+" value='"+role_code+"' /><label for="+(role_code+i)+">"+role_name+"</label>";
					}
					$("#role").html(html);
				}
			}
		}
		
		
		
	    function submitForm(){
	    	$("#form").validate({
				rules : {
					"user_name" : {
						required : true,
						maxlength : 32
					},
					"password" : {
						required : true,
						maxlength : 32
					},
					"phone" : {
						maxlength : 32
					},
					"email" : {
						maxlength : 32
					},
					"vname" : {
						maxlength : 32
					},
					"tel" : {
						maxlength : 32
					},
					"sex" : {
						maxlength : 32
					},
					"age" : {
						maxlength : 32
					},
					"cardtype" : {
						maxlength : 32
					},
					"cardnum" : {
						maxlength : 32
					},
					"remarks" : {
						maxlength : 500
					}
				}
			});
	    	
			var isValid = $("#form").valid();
			if (!isValid) return;
			var chk_value =""; 
			$('input[name="role"]:checked').each(function(){ 
				chk_value+=$(this).val()+",";
			}); 
			var user_name = $("#user_name").val();
			var password = $("#password").val();
			var phone = $("#phone").val();
			var email = $("#email").val();
			var vname = $("#vname").val();
			var tel = $("#tel").val();
			var sex = $("#sex").val();
			var age = $("#age").val();
			var user_code = generateRandomAlphaNum(12,"U");
			var cardtype = $("#cardtype").val();
			var cardnum = $("#cardnum").val();
			var remarks = $("#remarks").val();
			
			var parameter = "user_name:'"+user_name+"',password:'"+password+"',phone:'"+phone+"',email:'"+email+"',vname:'"+vname+
			"',tel:'"+tel+"',sex:'"+sex+"',age:'"+age+"',cardtype:'"+cardtype+"',cardnum:'"+cardnum+"',remarks:'"+remarks+"',role_codes:'"+chk_value+"',user_code:'"+user_code+"'";
			url = "/Hotel/rest/user/save";
			RemoteUtil.send(url, "POST", parameter, callSubmitBack);
			
		}
		
		function callSubmitBack(data){
			if(data.succeed){
				if(data.result.statusCode == "200"){
					window.location.href = "list.html";
				}
			}
			
		}
		
		function oncheckUserRepeat(value){
			return valid;
		}
		var valid = true;
		function callSubmitBackUserRepeat(data){
			
			if(data.succeed){
				if(data.result.statusCode == "200"){
					if(data.result.successMsg==null || data.result.successMsg == "null"){
						valid = true;
					}else{
						valid = false;
					}
				}
			}
			
		}
		
		function onBlur(){
			
			var parameter = "user_name:'"+$("#user_name").val()+"'";
			url = "/Hotel/rest/user/checkusername";
			RemoteUtil.send(url, "GET", parameter, callSubmitBackUserRepeat);
			
		}
		
	</script>
	
  </head>
  
  <body>
     <form name="form" method="post" action="" enctype="multipart/form-data" id="form">
   	<div class="form_box">
    	<table width="100%" border="0" class="table">
		  <tr>
		    <td class="td">用户名称：</td>
		    <td><input type="text" class="input_text required customvalid" id="user_name" name="user_name" onBlur="onBlur()" customvalid="oncheckUserRepeat" customMessage="{customvalid:'用户名已存在'}"><span class="span">*</span></td>
		    <td class="td">用户密码：</td>
		    <td><input type="password" class="input_text required" id="password" name="password"><span class="span">*</span></td>
		  </tr>
		  <tr>
		    <td class="td">移动电话：</td>
		    <td><input type="text" class="input_text" id="phone" name="phone"></td>
		    <td class="td">注册邮箱：</td>
		    <td><input type="text" class="input_text" id="email" name="email"></td>
		  </tr>
		  <tr>
		    <td class="td">真实姓名：</td>
		    <td><input type="text" class="input_text" id="vname" name="vname"></td>
		    <td class="td">联系电话：</td>
		    <td><input type="text" class="input_text" id="tel" name="tel"></td>
		  </tr>
		  <tr>
		    <td class="td">性别：</td>
		    <td>
		    	<select id="sex">
	    			<option value="男">男</option>
	    			<option value="女">女</option>
	    		</select>
		    </td>
		    <td class="td">年龄：</td>
		    <td><input type="text" class="input_text" id="age" name="age"></td>
		  </tr>
		  <tr>
		    <td class="td">证件类型：</td>
		    <td><input type="text" class="input_text" id="cardtype" name="cardtype"></td>
		    <td class="td">证件号码：</td>
		    <td><input type="text" class="input_text" id="cardnum" name="cardnum"></td>
		  </tr>
		   <tr>
		    <td class="td2">角色：</td>
		    <td colspan="3">
		    	<span id="role"></span>
		
		    </td>
		  </tr>
		  <tr>
		    <td class="td2">备注：</td>
		    <td colspan="3">
		    	<textArea name="remarks" id="remarks" cols="90%" rows="7" id="remarks"></textArea>
		    </td>
		  </tr>
		  <tr>
		    <td colspan="4" class="td3" align="center">
		    	<button type="button" class="button1" onclick="submitForm()">保存提交</button>
    			<button type="button" class="button2" onclick="history.go(-1)">取消返回</button>
		    </td>
		  </tr>
		</table>
    </div>
   </form>
  </body>
</html>
