	    function submitForm(){
			
			var name = $("#name").val();
			var detail = $("#detail").val();
			var coupontype = $("#coupontype").val();
			var instructions = $("#instructions").val();
			var count = $("#count").val();
			var price = $("#price").val();
			var sellprice = $("#sellprice").val();
			var remark = $("#remark").val();
			
			var parameter = "name:'"+name+"',detail:'"+detail+"',instructions:'"+instructions+"',count:'"+count+"',price:'"+price+
			"',sellprice:'"+sellprice+"',remark:'"+remark+"',coupontype:'"+coupontype+"',rowid:'"+id+"'";
			
			url = "/Hotel/rest/coupon/"+id;
			RemoteUtil.send(url, "POST", parameter, callSubmitBack);
			
		}
		
		function callSubmitBack(data){
			if(data.succeed){
				if(data.result.statusCode == "200"){
					window.location.href = "list.html";
				}
			}
