		function callSubmitBack2(data){
			if(data.succeed){
				if(data.result.statusCode == "200"){
					$("#nickname").val(data.result.successMsg.nickname);
					$("#name").val(data.result.successMsg.name);
					$("#accout").val(data.result.successMsg.accout);
					$("#birthday").val(data.result.successMsg.birthday);
					$("#phone").val(data.result.successMsg.phone);
					$("#integral").val(data.result.successMsg.integral);
					$("#rating").val(data.result.successMsg.rating);
					$("#sex").val(data.result.successMsg.sex);
					$("#cardtype").val(data.result.successMsg.cardtype);
					$("#idcard").val(data.result.successMsg.idcard);
					$("#addr").val(data.result.successMsg.addr);
					$("#remarks").val(data.result.successMsg.remarks);
				}
			}
		}
	    function submitForm(){
	    	$("#form").validate({
				rules : {
					"nickname" : {
						required : true,
						maxlength : 20
					},
					"name" : {
						required : true,
						maxlength : 20
					},
					"accout" : {
						required : true,
						maxlength : 20
					}
				}
			});
			var isValid = $("#form").valid();
			if (!isValid) return;
			
			var nickname = $("#nickname").val();
			var name = $("#name").val();
			var accout = $("#accout").val();
			var birthday = $("#birthday").val();
			var phone = $("#phone").val();
			var integral = $("#integral").val();
			var rating = $("#rating").val();
			var sex = $("#sex").val();
			var cardtype = $("#cardtype").val();
			var idcard = $("#idcard").val();
			var remarks = $("#remarks").val();
			var addr = $("#addr").val();
			
			var parameter = "nickname:'"+nickname+"',name:'"+name+"',accout:'"+accout+"',birthday:'"+birthday+"',phone:'"+phone+
			"',idcard:'"+idcard+"',integral:'"+integral+"',rating:'"+rating+"',sex:'"+sex+"',cardtype:'"+cardtype+"',remarks:'"+remarks+"',addr:'"+addr+"',rowid:'"+id+"'";
			url = "/Hotel/rest/customer/"+id;
			RemoteUtil.send(url, "POST", parameter, callSubmitBack);
			
		}
		
		function callSubmitBack(data){
			if(data.succeed){
				if(data.result.statusCode == "200"){
					window.location.href = "list.html";
				}
			}
		}
	//-->
	</script>
	
  </head>
  
  <body>
   <form name="form" method="post" action="" enctype="multipart/form-data" id="form">
   	<div class="form_box">
    	<table width="100%" border="0" class="table">
		  <tr>
		    <td class="td">客户昵称：</td>
		    <td><input type="text" class="input_text required" id="nickname" name="nickname"><span class="span">*</span></td>
		    <td class="td">客户真实姓名：</td>
		    <td><input type="text" class="input_text required" id="name" name="name"><span class="span">*</span></td>
		  </tr>
		  <tr>
		    <td class="td">账号：</td>
		    <td><input type="text" class="input_text required" id="accout" name="accout"><span class="span">*</span></td>
		    <td class="td">出生日期：</td>
		    <td><input type="text" class="input_date" id="birthday"></td>
		  </tr>
		  <tr>
		    <td class="td">联系电话：</td>
		    <td><input type="text" class="input_text" id="phone"></td>
		    <td class="td">地址：</td>
		    <td><input type="text" class="input_text" id="addr"></td>
		  </tr>
		  <tr>
		    <td class="td">积分：</td>
		    <td><input type="text" class="input_text digits" id="integral"></td>
		    <td class="td">等级：</td>
		    <td><input type="text" class="input_text digits" id="rating"></td>
		  </tr>
		  <tr>
		    <td class="td">性别：</td>
		    <td><select id="sex">
	    			<option value="男">男</option>
	    			<option value="女">女</option>
	    		</select></td>
		    <td class="td">证件类型：</td>
		    <td><input type="text" class="input_text" id="cardtype"></td>
		  </tr>
		  <tr>
		    <td class="td">证件号码：</td>
		    <td><input type="text" class="input_text" id="idcard"></td>
		  </tr>
		  <tr>
		    <td class="td2">备注：</td>
		    <td colspan="3">
		    	<textArea name="remarks" id="remarks" cols="90%" rows="7" id="remarks"></textArea>
		    </td>
		  </tr>
		  <tr>
		    <td colspan="4" class="td3" align="center">
		    	<button type="button" class="button1" onclick="submitForm()">保存提交</button>
    			<button type="button" class="button2" onclick="history.go(-1)">取消返回</button>
		    </td>
		  </tr>
		</table>
    </div>
   </form>
  </body>
</html>
