		$("#password").focus();
		return false;
	}else
	{
		if($("#password").val().length<6)
		{
			$(document).layer('密码长度不能小于6位');
		    $("#password").focus();
		    return false;
		}
	}
	if($("#verify").val()=='')
	{
		$(document).layer('验证码不能为空');
		$("#password").focus();
		return false;
	}
	if($("#fpassword").val()!=$("#password").val())
	{
		$(document).layer('两次密码不一致');
		return false;
